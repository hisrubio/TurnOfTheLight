{
  "manifest_version": 2,
  "name": "Luz control",
  "version": "1.0",
 
  "description": "turn off the light when netflix opens",
   "background": {
    "scripts": ["js/background.js"]
    
  },"icons": { 
    "16": "res/icon.png",
    "48": "res/icon.png",
    "128": "res/icon.png" 
  },

  "browser_action": {
    "default_popup" : "popup.html",
    "default_title" : "Luz control"
    },
   "permissions": [
      "tabs", "http://*/*", "https://*/*", "alarms"
  ]
}